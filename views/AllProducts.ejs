<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <%- include('partials/nav') %> <!-- Include the navigation partial -->
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <h1 class="text-3xl mb-3 tracking-tighter text-center">All products</h1>
        <% if(products.length > 0) { %>
            <div class="products flex gap-10 flex-wrap">
                <% products.forEach(function(product) { %>
                    <div class="min-w-72 max-w-72 p-4 bg-zinc-800 roundAed-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-500">
                            <a href="/product/<%= product._id%>">
                                <img src="<%= product.images %>" class="w-full h-full object-cover" alt="">
                            </a>
                        </div>
                        <h3 class="text-xl mt-3"><%= product.name %></h3> 
                        <!-- <h3 class="text-xl mt-3">Hardcoaded</h3>  -->
                        <h5 class="text-zinc-500"><%= product.description %></h5> 
                        <h5 class="text-zinc-500"><%= product.price %></h5> 
                        <h5 class="text-zinc-500"><%= product.uploadedUser %></h5> 
                        <div class="flex gap-3 mt-10 justify-between">
                            <!-- <a class="text-zinc-600" href="/product/update/<%= product._id %>">Edit product</a>
                            <a class="text-red-600" href="/product/delete/<%= product._id %>">Delete</a> -->
                            <a class="text-zinc-600" href="">Add To Cart</a>
                            <a class="text-red-600" href="">Buy Now</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <h3 class="text-zinc-500">There are no Products Yet..</h3>
        <% } %>
    </div>
</body>
</html>
