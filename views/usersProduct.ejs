<!-- views/userProducts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products by <%= user.name %></title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <%- include('partials/nav') %>
    <div class="container mx-auto p-8">
        <h1 class="text-3xl font-bold mb-8">Products by <%= user.name %></h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% products.forEach(product => { %>
                <div class="bg-white p-4 rounded-lg shadow-lg">
                    <img src="<%= product.images%>" class="w-full h-48 object-cover object-center mb-4" alt="Product Image">
                    <h2 class="text-xl font-bold"><%= product.name %></h2>
                    <p class="text-gray-700 mb-2">Rs <%= product.price %></p>
                    <p class="text-gray-700 mb-4"><%= product.description %></p>
                    <a href="/product/<%= product._id %>" class="text-blue-500 hover:underline">View Details</a>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
